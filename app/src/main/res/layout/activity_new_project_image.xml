                    <ImageView
                        android:id="@+id/sun"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_017_sun" />

                    <ImageView
                        android:id="@+id/forest"
                        android:layout_width="100dp"
