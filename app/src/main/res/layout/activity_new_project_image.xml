<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".NewProjectImageActivity">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="60dp"
            android:layout_height="60dp"

            android:layout_marginStart="10dp"
            android:layout_marginTop="10dp"
            android:src="@drawable/png_logo_collapp2"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_cancelNewProject"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_gravity="center"
            android:layout_marginTop="20dp"
            android:layout_marginEnd="15dp"
            android:adjustViewBounds="true"
            android:background="@drawable/btn_actions"
            android:scaleType="fitCenter"
            android:src="@drawable/ic_cancel"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent" />


    </androidx.constraintlayout.widget.ConstraintLayout>



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_name_project"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="15dp"
                android:fontFamily="@font/samantha"
                android:text="Choose your image"
                android:textAlignment="center"
                android:textSize="25dp" />


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="430dp">
                <!--Â¿Lista o GridView? -->

                <GridLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="50dp"
                    android:columnCount="3"
                    android:orientation="horizontal"
                    android:alignmentMode="alignMargins"
                    android:useDefaultMargins="true">


                    <ImageView
                        android:id="@+id/acorn"

                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_001_acorn" />

                    <ImageView
                        android:id="@+id/moon"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_002_moon" />

                    <ImageView
                        android:id="@+id/wood"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_003_wood" />

                    <ImageView
                        android:id="@+id/bee"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_004_bee" />

                    <ImageView
                        android:id="@+id/tree"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_005_tree" />

                    <ImageView
                        android:id="@+id/mushroom"
                        android:layout_width="100dp"
                        android:layout_height="100dp"


                        android:src="@drawable/png_006_mushroom" />

                    <ImageView
                        android:id="@+id/world"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_007_world" />

                    <ImageView
                        android:id="@+id/leaf"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_008_leaf" />

                    <ImageView
                        android:id="@+id/leaf2"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_009_leaf" />

                    <ImageView
                        android:id="@+id/tulip"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_010_tulip" />

                    <ImageView
                        android:id="@+id/sunflower"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_011_sunflower" />

                    <ImageView
                        android:id="@+id/plant"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_012_plant" />

                    <ImageView
                        android:id="@+id/fields"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_013_fields" />

                    <ImageView
                        android:id="@+id/cactus"
