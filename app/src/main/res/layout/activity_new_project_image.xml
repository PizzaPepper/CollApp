                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_022_earth" />

                    <ImageView
                        android:id="@+id/snow"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_023_snow" />

                    <ImageView
                        android:id="@+id/mountain"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_024_mountain" />

                    <ImageView
                        android:id="@+id/grass"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_025_grass" />

                    <ImageView
                        android:id="@+id/raid"
                        android:layout_width="100dp"
                        android:layout_height="100dp"
                        android:src="@drawable/png_026_rain" />

                    <ImageView
                        android:id="@+id/fish"
                        android:layout_width="100dp"
